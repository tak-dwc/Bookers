<header>
  <h1>Books</h1>
</header>
 <% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <span><%= link_to "Show",book_path(book.id) %></span> 
  <span><%= link_to "Edit",edit_book_path(book.id) %></span> 
  <span><%= link_to "Destory","/books/" %></span> 

 <% end %>
<main>
  <h2>New book</h2>
  <%=form_with model:@book,url:'/books',local:true do |f| %> 
  <h4>Title</h4>
  <%=f.text_field :title %>
  <h4>Body</h4>
  <%=f.text_area :body %>
  <%=f.submit'Create Book' %>
  <% end %>
  
</main>