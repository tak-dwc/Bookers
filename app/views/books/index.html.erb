<header>
  <h1>Books</h1>
</header>
 <% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <span><%= link_to "Show",book_path(book.id) %></span>
  <span><%= link_to "Edit",edit_book_path(book.id) %></span>
  <span><%= link_to "Destory",book_path(book),method: :delete,data:{confirm: "Are you sure?"} %></span>

 <% end %>
<main>
